<!DOCTYPE html>
<html>
  <head>
    <title>RailsYelpMvp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar navbar-dark bg-dark border-bottom">
      <div class="container-fluid">
        <%= link_to "Restaurants", restaurants_path, class:"navbar-brand text-light" %>
        <%= link_to "Add new Restaurant", new_restaurant_path, class:"nav-link text-light" %>
      </div>
    </div>
    <div class="container mt-5">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
           <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
